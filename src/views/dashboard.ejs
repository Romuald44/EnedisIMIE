            <!--<div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:<%= injection/(compteurJour/100)%>%"><%= injection/1000%> Kw watt</div>-->
        <!--</div>-->

