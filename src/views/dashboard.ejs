   <div class="row justify-content-around">
       <div class="col-2 compteurs">
            <span><%=compteurPoints%></span><p>Pts</p>
           <!--<p>Pts</p>-->
       </div>
       <div class="col-6 ">
           <div class="progress">

               <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" style="width: <%= autoconso/(compteurJour/100)%>%">
                   <%=Math.round(autoconso/(compteurJour/100)*100)/100%>% (<%=autoconso/1000%> Kw)<br> autoconsommés
               </div>
               <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated " style="width: <%= soutirage/(compteurJour/100)%>%">
                   <%=Math.round(soutirage/(compteurJour/100)*100)/100%>% (<%=soutirage/1000%> Kw)<br> soutirés
               </div>
           </div>
       </div>
       <div class="col-2 compteurs">
           <p>Injection</p><span><%=injection/1000%><span></span> kwh</p>

       </div>
